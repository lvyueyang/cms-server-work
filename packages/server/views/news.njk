{% extends "components/layout.njk" %}
{% block head %}
  <link rel="stylesheet" href="{{ static }}/styles/news.css"/>
{% endblock %}
{% block body %}
  <div class="banner-section" style="background-image:url({{ static }}/imgs/news_banner_1.jpg)">
    <div class="title">新闻中心</div>
  </div>
  <div class="section">
    <div class="wp news-list">
      {% for item in list %}
        <a href="/news/{{ item.id }}" class="news-item">
          <div class="title">{{ item.title }}</div>
          <div class="date">{{ item.create_date }}</div>
        </a>
      {% endfor %}
    </div>
    <br>
      <div class="wp pagintion">
        {% if prev > 0 %}
          <a class="button cancel" href="/news?current={{ prev }}">上一页</a>
        {% endif %}
        {% if next > 0 %}
          <a class="button cancel" href="/news?current={{ next }}">下一页</a>
        {% endif %}
      </div>
    </div>
  {% endblock %}